---
import "../styles/global.css";
import Header from "../components/Header.tsx";
import Footer from "../components/Footer.astro";
import QueryProvider from "../components/QueryProvider.tsx";

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "CycleGear - Zarządzanie rowerami i sprzętem sportowym",
  description = "Profesjonalna aplikacja do zarządzania rowerami, serwisowaniem i społecznością rowerową. Śledź swoje rowery, planuj serwis i dziel się doświadczeniami.",
} = Astro.props;
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <title>{title}</title>
  </head>
  <body class="min-h-screen flex flex-col">
    <QueryProvider>
      <Header client:load />
      <main class="flex-grow">
        <slot />
      </main>
      <Footer />
    </QueryProvider>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
