---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/navigation/Navbar";
import RecommendationsTabs from "../components/RecommendationsTabs";

// userId is guaranteed to be set by middleware for protected routes
const userId = Astro.locals.userId as string;

const title = "Rekomendacje ubioru - CycleGear";
const description =
  "Spersonalizowane rekomendacje ubioru rowerowego na podstawie warunków pogodowych, typu aktywności i Twojej historii treningów.";
---

<Layout title={title} description={description} showHeader={false}>
  <Navbar client:load userId={userId} />
  <div class="container mx-auto py-8 px-4">
    <div class="max-w-7xl mx-auto">
      <div class="text-center mb-8">
        <h1 class="text-3xl font-bold mb-2">Rekomendacje ubioru</h1>
        <p class="text-muted-foreground">
          Spersonalizowane rekomendacje ubioru rowerowego na podstawie
          aktualnych warunków pogodowych
        </p>
      </div>

      <RecommendationsTabs client:load />
    </div>
  </div>
</Layout>
